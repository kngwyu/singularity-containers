BootStrap: docker
From: nvcr.io/nvidia/cuda:11.2.0-cudnn8-devel-ubuntu20.04

%labels
    Author yuji.kanagawa@oist.jp
    Version v0.1.0

%environment
    export LANG=en_US.UTF-8
    export LANGUAGE=en_US:en
    export LC_ALL=en_US.UTF-8
    export SHELL=/bin/bash

%post
    export DEBIAN_FRONTEND=noninteractive
    apt update && apt install -y software-properties-common

    add-apt-repository universe
    add-apt-repository ppa:kelleyk/emacs

    apt update && apt install -y \
        build-essential \
        git \
        wget \
        vim \
        emacs27 \
        curl \
        zip \
        unzip \
        pkg-config \
        libblas-dev \
        liblapack-dev \
        python3-tk \
        python3-pip \
        python3-pyqt5 \
        python3-wheel \
        python3-venv \
        python3-distutils \
        python3-cffi \
        zsh \
        fish \
        cmake \
        ffmpeg \
        imagemagick \
        locales

    apt-get clean && rm -rf /var/lib/apt/lists/*

    # Make UTF-8 locale
    locale-gen en_US.UTF-8

    # Make Python3 default
    ln -s /usr/bin/python3 /usr/local/bin/python

    # Upgrade pip
    python3 -m pip --no-cache-dir install --upgrade pip

    # Install tensorflow
    python3 -m pip --no-cache-dir install \
        https://storage.googleapis.com/tensorflow/linux/gpu/tensorflow_gpu-2.6.0-cp38-cp38-manylinux2010_x86_64.whl \
        tensorflow-datasets \
        tensorflow-probability

    # Install Jax
    python3 -m pip --no-cache-dir install jax[cuda111] -f https://storage.googleapis.com/jax-releases/jax_releases.html
    python3 -m pip --no-cache-dir install \
        git+git://github.com/deepmind/dm-haiku \
        git+git://github.com/deepmind/distrax.git \
        git+git://github.com/deepmind/rlax.git \
        git+git://github.com/deepmind/optax.git \
        git+git://github.com/deepmind/chex.git \
        git+git://github.com/deepmind/acme.git \
        git+git://github.com/google/flax.git

    # Install some tools with --upgrade
    python3 -m pip --no-cache-dir install --upgrade \
        opencv-python \
        scipy \
        scikit-learn \
        scikit-image \
        imageio \
        pyYAML \
        pygame \
        moviepy \
        celluloid \
        jupyterlab \
        ipywidgets \
        bqplot \
        jupyterlab_code_formatter \
        setuptools \
        wheel \
        cython \
        black \
        flake8 \
        pytest \
        isort \
        pyarrow \
        pandas \
        Pillow \
        matplotlib \
        seaborn \
        colorama \
        typer \
        snoop

    # Enable jupyter plugins
    jupyter server extension enable jupyterlab_code_formatter ipywidgets

%help
    This is a container for deep learning with jax and tf.
