BootStrap: docker
From: nvcr.io/nvidia/cuda:11.3.1-cudnn8-devel-ubuntu20.04

%labels
    Author yuji.kanagawa@oist.jp
    Version v0.1.0

%files
    # Copy MuJoCo key
    mjkey.txt /opt/mujoco/mjkey.txt

%environment
    export LC_ALL=C
    export SHELL=/bin/bash

    # For mujoco-py
    export MUJOCO_PY_MUJOCO_PATH=/opt/mujoco/mujoco200
    export LD_LIBRARY_PATH=$MUJOCO_PY_MUJOCO_PATH/bin:${LD_LIBRARY_PATH}
    export MUJOCO_PY_MJKEY_PATH=/opt/mujoco/mjkey.txt

    # For DM control suites
    export MJKEY_PATH=$MUJOCO_PY_MJKEY_PATH
    export MJLIB_PATH=$MUJOCO_PY_MUJOCO_PATH/bin/libmujoco200.so

%post
    export DEBIAN_FRONTEND=noninteractive
    apt update && apt install -y software-properties-common

    add-apt-repository universe
    add-apt-repository ppa:kelleyk/emacs

    apt update && DEBIAN_FRONTEND=noninteractive apt install -y \
        build-essential \
        git \
        wget \
        vim \
        emacs27 \
        curl \
        zip \
        net-tools \
        zlib1g-dev \
        unzip \
        pkg-config \
        libblas-dev \
        liblapack-dev \
        python3-tk \
        python3-pyqt5 \
        python3-wheel \
        python3-venv \
        python3-distutils \
        python3-cffi \
        pipenv \
        zsh \
        fish \
        cmake \
        libpng-dev \
        libgl1-mesa-dev \
        libgl1-mesa-glx \
        libglfw3 \
        libglew2.1 \
        libglew-dev \
        libosmesa6 \
        libosmesa6-dev \
        xpra \
        xserver-xorg-dev \
        patchelf \
        ffmpeg

    apt-get clean && rm -rf /var/lib/apt/lists/*

    # Make Python3 default
    ln -s /usr/bin/python3 /usr/local/bin/python

    # Update pip
    python3 -m pip --no-cache-dir install --upgrade pip
    # Install Jax
    python3 -m pip --no-cache-dir install --upgrade jax[cuda111] -f https://storage.googleapis.com/jax-releases/jax_releases.html
    python3 -m pip --no-cache-dir install \
        git+git://github.com/deepmind/dm-haiku \
        git+git://github.com/deepmind/distrax.git \
        git+git://github.com/deepmind/rlax.git \
        git+git://github.com/deepmind/optax.git \
        git+git://github.com/deepmind/chex.git \
        git+git://github.com/deepmind/acme.git

    # Install some tools with --upgrade
    python3 -m pip --no-cache-dir install \
        scipy \
        jupyterlab \
        jupyterlab_code_formatter \
        setuptools \
        wheel \
        cython \
        black \
        flake8 \
        pytest \
        isort \
        pygame \
        pandas \
        Pillow \
        opencv-python \
        matplotlib \
        seaborn \
        colorama \
        typer \
        gym[atari]

    # Enable jupyter plugins
    jupyter server extension enable jupyterlab_code_formatter

    # Install pybullet
    python3 -m pip --no-cache-dir install pybullet

    # Install mujoco environments
    ## For mujoco-py
    export MUJOCO_PY_MUJOCO_PATH=/opt/mujoco/mujoco200
    export LD_LIBRARY_PATH=$MUJOCO_PY_MUJOCO_PATH/bin:${LD_LIBRARY_PATH}
    export MUJOCO_PY_MJKEY_PATH=/opt/mujoco/mjkey.txt

    ## For DM control suites
    export MJKEY_PATH=$MUJOCO_PY_MJKEY_PATH
    export MJLIB_PATH=$MUJOCO_PY_MUJOCO_PATH/bin/libmujoco200.so

    # Install MuJoCo
    # We have to install mujoco-py at last, to ensure numpy binary compatibility
    wget https://www.roboti.us/download/mujoco200_linux.zip -O mujoco.zip \
        && unzip mujoco.zip \
        && mv mujoco200_linux $MUJOCO_PY_MUJOCO_PATH \
        && rm mujoco.zip

    python3 -m pip --no-cache-dir install dm_control
    python3 -m pip --no-cache-dir install git+git://github.com/denisyarats/dmc2gym.git
    python3 -m pip --no-cache-dir install git+git://github.com/kngwyu/mujoco-py.git@use-tmp-for-lock

    # Remove the MuJoCo key
    rm $MUJOCO_PY_MJKEY_PATH

%help
    This is a container for DeepRL experiments.
    Contains Python3.8, Jax, OpenAI gym with atari games,
    Jupyter Lab, mujoco-py and dm_control with MuJoCo 2.0.
    This container expects that your mujoco key is binded to /opt/mujoco/mjkey.txt,
    by "--bind your-mjkey.txt:/opt/mujoco/mjkey.txt" or
    "export SINGULARITY_BIND='your-mjkey.txt:/opt/mujoco/mjkey.txt'".
